}

/**
 * Implements hook_menu().
 *
 * Defines an administration path for the module.
 */
function utexas_partials_social_links_menu() {
  // Menu items.
  $items = array();

  // Now we create the admin page item.
  $items['admin/config/utexas/utexas-partials-social-links'] = array(
    'title' => 'Social Links Settings',
    'description' => 'Manage social media links for the site header and footer.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('utexas_partials_social_links_admin'),
    'access arguments' => array('manage social links settings'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

