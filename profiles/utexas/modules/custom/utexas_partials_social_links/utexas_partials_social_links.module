/**
 * Implements hook_form_alter().
 *
 * Defines the validate handler function.
 */
function utexas_partials_social_links_form_alter(&$form, &$form_state, $form_id) {
  // dsm($form_id);
  if ($form_id == 'utexas_social_links_admin') {
    $form['#validate'][] = 'utexas_social_links_form_validate';
  }
}

/**
 * Implements utexas_social_links_form_validate().
 *
 * Defines the validation for each input field from the admin form.
 */
function utexas_social_links_form_validate($form, &$form_state) {
  if (filter_var($form_state['values']['utexas_social_links_facebook'], FILTER_VALIDATE_URL) === FALSE
      && !empty($form_state['values']['utexas_social_links_facebook'])) {
    form_set_error('utexas_social_links_facebook', t('You have to set a valid URL for your Facebook account'));
  }
  if (filter_var($form_state['values']['utexas_social_links_twitter'], FILTER_VALIDATE_URL) === FALSE
    && !empty($form_state['values']['utexas_social_links_twitter'])) {
    form_set_error('utexas_social_links_twitter', t('You have to set a valid URL for your Twitter account'));
  }
  if (filter_var($form_state['values']['utexas_social_links_instagram'], FILTER_VALIDATE_URL) === FALSE
    && !empty($form_state['values']['utexas_social_links_instagram'])) {
    form_set_error('utexas_social_links_instagram', t('You have to set a valid URL for your Instagram account'));
  }
  if (filter_var($form_state['values']['utexas_social_links_linkedin'], FILTER_VALIDATE_URL) === FALSE
    && !empty($form_state['values']['utexas_social_links_linkedin'])) {
    form_set_error('utexas_social_links_linkedin', t('You have to set a valid URL for your LinkedIn account'));
  }
  if (filter_var($form_state['values']['utexas_social_links_youtube'], FILTER_VALIDATE_URL) === FALSE
    && !empty($form_state['values']['utexas_social_links_youtube'])) {
    form_set_error('utexas_social_links_youtube', t('You have to set a valid URL for your YouTube account'));
  }
  if (filter_var($form_state['values']['utexas_social_links_googleplus'], FILTER_VALIDATE_URL) === FALSE
    && !empty($form_state['values']['utexas_social_links_googleplus'])) {
    form_set_error('utexas_social_links_googleplus', t('You have to set a valid URL for your Google+ account'));
  }
}

/**
 * Implements hook_block_view().
 */
function utexas_partials_social_links_block_view($delta = '') {
  $block = array();
  switch ($delta) {
    case 'social_links_block':
      $block['content'] = social_links_block_view();
      break;
  }

  return $block;
}

/**
 * Implements social_links_block_view().
 *
 * Custom function that defines how the new block will be displayed.
 */
function social_links_block_view() {
  $block = array();

  // Building the block content.
  $content = '<ul class="connect-links">';
  $fb = variable_get('utexas_social_links_facebook', '');
  if (!empty($fb)) {
    $content .= '<li><a href="' . $fb . '" class="connect-link"><span class="icon-facebook"><span class="hiddenText">Facebook</span></span></a></li>';
  }
  $tw = variable_get('utexas_social_links_twitter', '');
  if (!empty($tw)) {
    $content .= '<li><a href="' . $tw . '" class="connect-link"><span class="icon-twitter"><span class="hiddenText">Twitter</span></span></a></li>';
  }
  $ig = variable_get('utexas_social_links_instagram', '');
  if (!empty($ig)) {
    $content .= '<li><a href="' . $ig . '" class="connect-link"><span class="icon-instagram"><span class="hiddenText">Instagram</span></span></a></li>';
  }
  $li = variable_get('utexas_social_links_linkedin', '');
  if (!empty($li)) {
    $content .= '<li><a href="' . $li . '" class="connect-link"><span class="icon-linkedin"><span class="hiddenText">LinkedIn</span></span></a></li>';
  }
  $yt = variable_get('utexas_social_links_youtube', '');
  if (!empty($yt)) {
    $content .= '<li><a href="' . $yt . '" class="connect-link"><span class="icon-youtube"><span class="hiddenText">YouTube</span></span></a></li>';
  }
  $gp = variable_get('utexas_social_links_googleplus', '');
  if (!empty($gp)) {
    $content .= '<li><a href="' . $gp . '" class="connect-link"><span class="icon-googleplus"><span class="hiddenText">Google+</span></span></a></li>';
  }
  $content .= '</ul>';

  // Block output in HTML with div wrapper.
  $block = array(
    'content' => array(
      '#prefix' => '',
      '#type' => 'markup',
      '#markup' => $content,
      '#suffix' => '',
    ),
  );

  return $block;
}
