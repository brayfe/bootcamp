<?php
/**
 * @file
 * Install file for Social Links module. Used to install a field schema
 * for the Social Links compound field.
 */

/**
 * Implements hook_field_schema().
 *
 * Defines the schema for Social Links fields.
 */
function mymodule_social_links_field_schema($field) {
  $columns = array();

  switch ($field['type']) {
    case 'mymodule_social_links':
      $columns['headline'] = array(
        'type' => 'varchar',
        'length' => 255,
        'not null' => FALSE,
        'description' => 'Stores headline for the social link area.',
      );
      $columns['links'] = array(
        'type' => 'blob',
        'size' => 'normal',
        'serialize' => TRUE,
        'not null' => FALSE,
        'description' => 'Stores serialized array of links for the social links compound field.',
      );
      // Add this column to the field for storage in the db.
      $columns['display_type'] = array(
        'type' => 'varchar',
        'length' => 10,
        'not null' => FALSE,
        'description' => 'Stores the way to display links.',
      );
      break;
  }

  return array(
    'columns' => $columns,
  );
}
