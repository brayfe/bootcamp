/**
 * Custom function to save entities to the database.
 */
function _mymodule_add_content() {
  $pavers[] = array(
    'style' => 'Burnt Orange',
    'price' => 250,
    'discount_price' => 200,
    'width' => 8,
    'height' => 4,
    'lines_of_text' => 3,
    );
  $pavers[] = array(
    'style' => 'Bronze',
    'price' => '500',
    'discount_price' => '400',
    'width' => '8',
    'height' => '8',
    'lines_of_text' => '5',
    );
  $pavers[] = array(
    'style' => 'Silver (Brick & Plaque)',
    'price' => '1000',
    'discount_price' => NULL,
    'width' => '8',
    'height' => '8',
    'lines_of_text' => '5',
    );

  $entity_type = 'paver';
  foreach ($pavers as $id => $values) {
    $e = entity_create($entity_type, array('type' => $entity_type));
    $ew = entity_metadata_wrapper($entity_type, $e);
    foreach ($values as $key => $value) {
      $ew->{$key}->set($value);
    }
    $ew->save();
  }
}
